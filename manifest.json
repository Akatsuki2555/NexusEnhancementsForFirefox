{

    "manifest_version": 2,
    "name": "Nexus Enhancements",
    "version": "1.0",

    "description": "Enhances experience on NexusMods",
    "permissions": ["activeTab", "storage"],

    "content_scripts": [
        {
            "matches": ["*://*.nexusmods.com/*"],
            "js": ["nexusmods.js"]
        }
    ]
}